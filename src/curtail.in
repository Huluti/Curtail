import os
import sys
import signal
import gettext
import locale

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'
locale.bindtextdomain('curtail', localedir)

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
gettext.install('curtail', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'curtail.gresource'))
    resource._register()

    from curtail import main
    sys.exit(main.main(VERSION))
